@model Laptop.Models.Tintuc

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<h2 class="mt-3">Create new</h2>



<div class="row p-lg-3" >
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"><h4>Title</h4></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Contentspreview" class="control-label"><h4>Preview</h4></label>

                <input asp-for="Contentspreview" class="form-control" />
                <span asp-validation-for="Contentspreview" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Contents" class="control-label"><h4>Contents</h4></label>

                <textarea asp-for="Contents" class="form-control" style="width: 500px"></textarea>
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Img1" class="control-label"><h4 class="mt-2">Thumbnail</h4></label>
                <input asp-for="Img1" class="form-control-file" />
            </div>
                      
            <div class="form-group">

                <label class="control-label"><h4>Author</h4></label>
                <input readonly class="form-control" value="@ViewBag.NameAutor" />

            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"><h4>Created Date</h4></label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <h4>Status</h4><input asp-for="Status" />
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>

                        <h4>Hot</h4><input asp-for="Hot" /> 

                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>

                        <h4>Recently</h4><input asp-for="New" />

                    </label>
                </div>
            </div>
            <div class="form-group">

                <label asp-for="BrandId" class="control-label"><h4>Brand</h4></label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandID" style="vertical-align: top;"></select>

            </div>
            <input type="hidden" asp-for="Author" value="@User.Identity"/>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-primary" asp-action="Index">Return</a>
            </div>
        </form>
    </div>
</div>

<script src="@Url.Content("~/lib/summernote/summernote.js")"></script>
<link href="@Url.Content("~/lib/summernote/summernote.css")" rel="stylesheet">
<script>
    $(document).ready(function () {
        $('#Contents').summernote({
            height: 200,
            toolbar: [
                ['style', ['bold', 'italic', 'underline', 'clear']],
                ['font', ['strikethrough', 'superscript', 'subscript']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']],
                ['insert', ['link', 'picture', 'video']]
            ]
        });
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
