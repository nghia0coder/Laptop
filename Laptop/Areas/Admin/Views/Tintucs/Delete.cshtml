
@model Laptop.Models.Tintuc

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class ="mt-3">Delete new</h2>

<div class="p-lg-3">
   
    <hr />
    <dl class="dl-horizontal">
        <h4>
            Title
        </h4>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <h4>
            Preview
        </h4>
        <dd>
            @Html.DisplayFor(model => model.Contentspreview)
        </dd>
        <h4>
            Contents
        </h4>
        <dd>
            @Html.Raw(Model.Contents)
        </dd>     
        <h4>
            Author
        </h4>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
        <h4>
            Created Date
        </h4>
        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <h4>
            Status
        </h4>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <h4>
            Hot
        </h4>
        <dd>
            @Html.DisplayFor(model => model.Hot)
        </dd>
        <h4>
            Recently
        </h4>
        <dd>
            @Html.DisplayFor(model => model.New)
        </dd>
        <h4>
            Brand
        </h4>
        <dd>
            @Html.DisplayFor(model => model.Brand.BrandName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PostID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Return</a>
    </form>
</div>
