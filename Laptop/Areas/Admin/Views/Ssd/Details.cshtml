@model Laptop.Models.Ssd

@{
    ViewData["Title"] = "Details";
}

<!-- Include Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h2>SSD DETAIL</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("SSD name")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ssdname)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SsdId" class="btn btn-primary">Edit</a> <!-- Added Bootstrap button styling -->
    <a asp-action="Index" class="btn btn-secondary">Back</a> <!-- Added Bootstrap button styling -->
</div>

<!-- Include Bootstrap JS (Optional) -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
