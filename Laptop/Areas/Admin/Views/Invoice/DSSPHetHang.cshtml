@model IEnumerable<ProductVariation>
@{
    ViewData["Title"] = "Sản phẩm gần hết hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>@ViewData["Title"]</h2>
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div id="list" class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductItems.Product.ProductName</td>
                                <td>@item.ProductItems.Product.Brand</td>
                                <td><img width="100" height="100" src="~/Contents/img/@item.ProductItems.Image1" /></td> 
                                <td>
                                    <a asp-action="NhapHangDon" asp-route-id="@item.ProductVarId">Nhập hàng</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <h2>HIỆN TẠI KHÔNG CÓ SẢN PHẨM NÀO GẦN HÊT HÀNG</h2>
        }
    </div>
</div>
