@model GiayDep.Models.HoaDon

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center font-weight-bold">Chi tiết hóa đơn</h1>

<div>
    <h4>Thông tin hóa đơn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ngày thanh toán
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ngaythanhtoan)
        </dd>
        <dt class="col-sm-2">
            Tình trạng giao hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tinhtranggiaohang)
        </dd>
        <dt class="col-sm-2">
            Ngày giao
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ngaygiao)
        </dd>
        <dt class="col-sm-2">
            Đã thanh toán
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dathanhtoan)
        </dd>
        <dt class="col-sm-2">
            Đã hủy
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dahuy)
        </dd>
        <dt class="col-sm-2">
            Đã xóa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Daxoa)
        </dd>
        <dt class="col-sm-2">
            Khuyến mãi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Khuyenmai)
        </dd>
        <dt class="col-sm-2">
            Mã khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MakhNavigation.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Idhoadon" class="btn btn-warning">Chỉnh sửa</a> |
    <a asp-action="Index" class="btn btn-success">Quay trở lại</a>
</div>
