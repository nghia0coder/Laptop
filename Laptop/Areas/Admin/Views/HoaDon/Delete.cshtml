@model GiayDep.Models.HoaDon

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center font-weight-bold">Xóa hóa đơn</h1>

<h3>Bạn có muốn xóa hóa đơn này không</h3>
<div>
    <h4>Chi tiết hóa đơn</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ngày thanh toán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngaythanhtoan)
        </dd>
        <dt class = "col-sm-2">
            Tình trạng giao hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tinhtranggiaohang)
        </dd>
        <dt class = "col-sm-2">
            Ngày giao
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngaygiao)
        </dd>
        <dt class = "col-sm-2">
            Đã thanh toán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dathanhtoan)
        </dd>
        <dt class = "col-sm-2">
            Đã hủy
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dahuy)
        </dd>
        <dt class = "col-sm-2">
            Đã xóa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Daxoa)
        </dd>
        <dt class = "col-sm-2">
            Khuyến mãi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Khuyenmai)
        </dd>
        <dt class = "col-sm-2">
            Mã khách hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MakhNavigation.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Idhoadon" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Quay trở lại</a> 
    </form>
</div>
