@model IEnumerable<GiayDep.Models.Membership>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center font-weight-bold">Danh sách thành viên</h2>

<p>
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create")'">Tạo mới</button>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Tài khoản
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Email
            </th>
            <th>
                SĐT
            </th>
            <th>
                Mã loại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tk)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sđt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLoaiTvNavigation.MaLoaiTv)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Idtv" class="btn btn-warning">Chỉnh sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.Idtv" class="btn btn-danger">Xóa</a>

                </td>
            </tr>
        }
    </tbody>
</table>

