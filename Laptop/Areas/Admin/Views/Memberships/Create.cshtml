@model GiayDep.Models.Membership

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class ="text-center font-weight-bold">THÊM THÀNH VIÊN MỚI</h2>

<h4>Thông tin thành viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tk" class="control-label">Tài khoản</label>
                <input asp-for="Tk" class="form-control" />
                <span asp-validation-for="Tk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mk" class="control-label">Mật khẩu</label>
                <input asp-for="Mk" class="form-control" />
                <span asp-validation-for="Mk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoTen" class="control-label">Họ tên</label>
                <input asp-for="HoTen" class="form-control" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sđt" class="control-label">Số điện thoại</label>
                <input asp-for="Sđt" class="form-control" />
                <span asp-validation-for="Sđt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaLoaiTv" class="control-label">Mã loại thành viên</label>
                <select asp-for="MaLoaiTv" class ="form-control" asp-items="ViewBag.MaLoaiTv"></select>
            </div>
            <div class="form-group">
                <br />
                <button type="submit" class="btn btn-primary">Tạo</button>
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index" class="btn btn-success">Quay trở lại</a>
</div>


