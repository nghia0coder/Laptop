                </a>
            </div>
        </div>
        <br />

        <div class="chart-container">
            <canvas id="myChart" class="chart"></canvas>

            <canvas id="myPieChart" class="chart"></canvas>
            <div>
                <select id="monthSelector">
                    @foreach (var month in Enumerable.Range(1, 12))
                    {
                        if (month == DateTime.Now.Month)
                        {
                            <option value="@month" selected>@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(month)</option>
                        }
                        else
                        {
                            <option value="@month">@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(month)</option>
                        }
                    }
                </select>
            </div>
        </div>

   

 
    </div>

</main>




@section Scripts
{
    <script>

        $(document).ready(function () {
            
            fetchDataAndDrawChart();
            fetchDataAndPieChart(null);

            $('#monthSelector').change(function () {

                var selector = $(this).val();

                console.log("Selector" + selector);

                fetchDataAndPieChart(selector);

            });


            function fetchDataAndDrawChart() {
                $.ajax({
                    type: "POST",
                    url: '/Admin/Admin/GetSalesData',
                    data: "",
                    dataType: "json",
                    success: OnSuccessResult,
                    error: OnError
                });
            }

            function OnSuccessResult(data) {
                var _chartLabels = data.labels.$values;
            

                var _chartData = data.totalRevenue.$values;
            

                var barColor = ["red", "green", "blue", "orange", "brown", "purple", "cyan", "magenta", "yellow", "lavender", "teal", "salmon"];

                // Đảm bảo rằng cú pháp của hàm new Chart() là đúng
                new Chart("myChart", {
                    type: "bar",
                    options: {
                        title: {
                            display: true,
                            text: 'SALES DATA THIS YEAR',
                            fontSize : 20
                        },
                        legend: {
                            display: false
                        }
                    },
             
                
                
                    data: {
                        labels: _chartLabels,
                        datasets: [{
                            backgroundColor: barColor,
                            data: _chartData
                        }]
                    }
                 


                });
            }
            function OnError(data) { 
                
                alert.log("No data");
            
            }


            function fetchDataAndPieChart(month) {
                
                if(month == null || month == undefined)
                {
                    var currentDate = new Date();

                    month = currentDate.getMonth() + 1;
                }

                console.log(month);

              
                    $.ajax({
                        type: "POST",
                        url: '/Admin/Admin/GetSalesPieData',
                        data: { monthSale: month },
                        dataType: "json",
                        success: PieResult,
                        error: PieError
                    });
                
            }

            function PieResult(data) {
                var _chartLabels = data.labels.$values;
                console.log(_chartLabels);

                var _chartData = data.totalRevenue.$values;
                console.log(_chartData);

                var barColor = ["red", "green", "blue", "orange", "brown", "purple", "cyan", "magenta", "yellow", "lavender", "teal", "salmon"];

                // Đảm bảo rằng cú pháp của hàm new Chart() là đúng
                new Chart("myPieChart", {
                    type: "pie",
                    options: {
                        title: {
                            display: true,
                            text: 'SALES DATA THIS MONTH BY BRANDS',
                            fontSize: 20
                        },
                        legend: {
                            display: true
                        }
                    },




                    data: {
                        labels: _chartLabels,
                        datasets: [{
                            backgroundColor: barColor,
                            data: _chartData
                        }]
                    }



                });
            }
            function PieError(data) {

                alert.log("No data");

            }

        });



      
    </script>

    <style>
        .chart-container {
            display: flex;
            justify-content: space-around; /* Cân bằng khoảng cách giữa các biểu đồ */
            align-items: center; /* Căn giữa các biểu đồ theo chiều dọc */
            flex-wrap: wrap; /* Cho phép các biểu đồ xuống hàng nếu không đủ chỗ */
        }

        .chart {
            flex: 1; /* Mỗi biểu đồ chiếm 1 phần bằng nhau của không gian khả dụng */
            max-width: 700px;
            max-height: 430px;
        }
    </style>


}


