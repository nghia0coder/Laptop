@model IEnumerable<Laptop.Models.ProductVariation>

@{
    ViewData["Title"] = "Index";
}

<h2>PHÂN KHÚC SẢN PHẨM</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mã phân khúc
            </th>
            <th>
                Số lượng tồn
            </th>
            <th>
                Giá
            </th>
            <th>
                Mục sản phẩm
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ssd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductVarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtyinStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductItems.ProductItemsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ram.RamId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ssd.SsdId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
