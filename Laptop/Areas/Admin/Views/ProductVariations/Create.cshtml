@model Laptop.Models.ProductVariation

@{
    ViewData["Title"] = "Create";

    ProductItem product = ViewBag.ProductItemsId;
}

<h2>TẠO PHÂN KHÚC SẢN PHẨM</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductItemsId" class="control-label">Mã phân khúc</label>
                <input asp-for="ProductItemsId" class ="form-control" value="@product.ProductItemsId"/>
            </div>
            <div class="form-group">
                <label asp-for="RamId" class="control-label"></label>
                <select asp-for="RamId" class ="form-control" asp-items="ViewBag.RamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ssdid" class="control-label"></label>
                <select asp-for="Ssdid" class ="form-control" asp-items="ViewBag.Ssdid"></select>
            </div>
            <div class="form-group">
                <label asp-for="QtyinStock" class="control-label">Số lượng tồn</label>
                <input asp-for="QtyinStock" class="form-control" />
                <span asp-validation-for="QtyinStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Trở về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
