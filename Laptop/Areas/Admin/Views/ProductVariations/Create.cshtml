@model Laptop.Models.ProductVariation

@{
    ViewData["Title"] = "Create";

    ProductItem product = ViewBag.ProductItemsId;
}

<h2>Create</h2>

<h4>ProductVariation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductItemsId" class="control-label"></label>
                <input asp-for="ProductItemsId" class ="form-control" value="@product.ProductItemsId"/>
            </div>
            <div class="form-group">
                <label asp-for="RamId" class="control-label"></label>
                <select asp-for="RamId" class ="form-control" asp-items="ViewBag.RamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ssdid" class="control-label"></label>
                <select asp-for="Ssdid" class ="form-control" asp-items="ViewBag.Ssdid"></select>
            </div>
            <div class="form-group">
                <label asp-for="QtyinStock" class="control-label"></label>
                <input asp-for="QtyinStock" class="form-control" />
