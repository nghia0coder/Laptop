@model GiayDep.Models.NhaCungCap

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div class="container">

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên nhà cung cấp:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tennhacc)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diachi)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            ID nhà sản xuất:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdnhasxNavigation.Idnhasx)
        </dd>
    </dl>

    <form asp-action="Delete" class="form-inline">
        <input type="hidden" asp-for="Idnhacc" />
        <input type="submit" value="Xóa" class="btn btn-danger" />  |
        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
    </form>
</div>
