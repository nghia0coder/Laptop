    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Nhà sản xuất</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên nhà sản xuất 
        </dt>
