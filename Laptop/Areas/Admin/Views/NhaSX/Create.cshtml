@model Laptop.Models.NhaSanXuat

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center"> Thêm Nhà Sản Xuất</h2>

<div class="card">
    <div class="card-body">
        
        <form asp-action="Create" asp-controller="NhaSX" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div class="form-group row">
                <label asp-for="Tennhasx" class="col-form-label font-weight-bold col-sm-2">Tên NSX</label>
                <div class="col-md-6">
                    <input asp-for="Tennhasx" class="form-control" required />
                    <span asp-validation-for="Tennhasx" class="text-danger"></span>
                    <div class="invalid-feedback">
                        Bạn hãy nhập lại.
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Diachi" class="col-form-label font-weight-bold col-sm-2">Địa chỉ</label>
                <div class="col-md-6">
                    <input asp-for="Diachi" class="form-control" required />
                    <span asp-validation-for="Diachi" class="text-danger"></span>
                    <div class="invalid-feedback">
                        Bạn hãy nhập lại.
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Sđt" class="col-form-label font-weight-bold col-sm-2">Số điện thoại</label>
                <div class="col-md-6">
                    <input asp-for="Sđt" class="form-control" required />
                    <span asp-validation-for="Sđt" class="text-danger"></span>
                    <div class="invalid-feedback">
                        Bạn hãy nhập lại.
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="col-form-label font-weight-bold col-sm-2">Email</label>
                <div class="col-md-6">
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="invalid-feedback">
                        Bạn hãy nhập lại.
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-8 mt-3">
                    <button type="submit" class="btn btn-primary font-weight-bold">Thêm mới</button>
                    <a asp-action="Index" class="btn btn-secondary font-weight-bold">Trở về</a>
                </div>
            </div>
        </form>
    </div>
</div>


