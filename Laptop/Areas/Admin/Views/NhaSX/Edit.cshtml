@model GiayDep.Models.NhaSanXuat

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Thêm liên kết đến Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h2 class="text-center"> Chỉnh sửa </h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idnhasx" />
            <div class="form-group">
                <label asp-for="Tennhasx" class="control-label">Tên nhà sản xuất</label>
                <input asp-for="Tennhasx" class="form-control" />
                <span asp-validation-for="Tennhasx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diachi" class="control-label">Địa chỉ</label>
                <input asp-for="Diachi" class="form-control" />
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sđt" class="control-label">Số điện thoại</label>
                <input asp-for="Sđt" class="form-control" />
                <span asp-validation-for="Sđt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-sm btn-secondary font-weight-bold w-25">Trở về</a>
            </div>
        </form>
    </div>
</div>


