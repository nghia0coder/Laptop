@using Laptop.Models
@using Microsoft.AspNetCore.Mvc.RazorPages
@model IEnumerable<GiayDep.Models.NhaSanXuat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }

}
<!-- Thêm liên kết đến Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h2 class="text-center"> Quản Lý Nhà Sản Xuất </h2>
<div class="card">
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
        </p>
        @if (Model != null && Model.Any())
        {
            <div id="list" class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>

                            <th>Tên nhà sản xuất</th>
                            <th>Thông tin</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Tennhasx</td>
                                <td>@item.Diachi</td>
                                <td>@item.Sđt</td>
                                <td>@item.Email</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Idnhasx" class="btn btn-info">Chỉnh sửa</a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Idnhasx" class="btn btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>...</p>
        }
    </div>
</div>

<div class="container">
    @if (pager.TotalPage > 0)
    {
        <ul class="pagination justify-content-end">
            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="NhaSX" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="NhaSX" asp-action="Index"
                       asp-route-pg="@(pager.CurrentPage-1)">Previous</a>
                </li>
            }
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="NhaSX" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>
            }
            @if (pager.CurrentPage < pager.TotalPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="NhaSX" asp-action="Index" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="NhaSX" asp-action="Index" asp-route-pg="@pager.TotalPage">Last</a>
                </li>
            }
           
        </ul>
    }
</div>


