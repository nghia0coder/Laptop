@model Laptop.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Hóa đơn</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Ngày thanh toán 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
          Tình trạng giao hàng 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
        <dt class = "col-sm-2">
            Ngày giao 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class = "col-sm-2">
           Đã thanh toán 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusPayment)
        </dd>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderId">Chỉnh sửa</a> |
    <a asp-action="Index">Trở về</a>
</div>
