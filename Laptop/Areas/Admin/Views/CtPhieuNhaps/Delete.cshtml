@model GiayDep.Models.CtPhieuNhap

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center font-weight-bold">Xóa phiếu nhập</h1>

<h3>Bạn có muốn xóa phiếu nhập này?</h3>
<div>
    <h4>CtPhieuNhap</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ngày nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>
        <dt class = "col-sm-2">
            Số lượng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Soluong)
        </dd>
        <dt class = "col-sm-2">
            Giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gia)
        </dd>
        <dt class = "col-sm-2">
           Mã phiếu nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdphieunhapNavigation.Idphieunhap)
        </dd>
        <dt class = "col-sm-2">
            Mã sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdspNavigation.Idsp)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdchitietPn" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Quay trở lại</a>
    </form>
</div>
