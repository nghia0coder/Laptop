@model IEnumerable<Laptop.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Các Mục Sản Phẩm</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
</p>

<div class="table-responsive">
    <form class="d-flex" role="search">
        <input class="form-control me-2 search" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <table class="table table-striped" id="tbl">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
          
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
            
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandNavigation.BrandName)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-controller="ProductItems" asp-action="Create" asp-route-id="@item.ProductId">Tạo Sản Phẩm</a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ProductId">Sửa</a>
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ProductId">Chi tiết</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.search').on("keyup", function () {
            var myvalue = $(this).val().toLowerCase();

            $('#tbl tbody tr').each(function () {

                var data = $(this).text().toLowerCase();

                if (data.indexOf(myvalue) === -1) {
                    $(this).hide();
                }
                else {
                    $(this).show()
                }
            })
        })
    })
</script>