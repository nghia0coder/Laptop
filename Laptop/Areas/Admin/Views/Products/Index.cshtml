@model IEnumerable<GiayDep.Models.SanPham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h1>Quản lý sản phẩm</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Bảo hành
            </th>
            <th>
                Khuyến mãi
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Mã loại sản phẩm
            </th>
            <th>
                Mã nhà cung cấp
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tensp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dongia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soluong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Baohanh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Khuyenmai)
                </td>
                <td>
                    <img class="thumbnail-image" src="~/Contents/img/@item.Hinhanh1" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaloaispNavigation.Idloai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManhaccNavigation.Idnhacc)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Idsp" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Idsp" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Idsp" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>