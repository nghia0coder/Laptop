@model Laptop.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>EDIT PRODUCT</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Product name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
 
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
       
   
            <div class="form-group">
                <label asp-for="Brand" class="control-label" >Brand</label>
                <select asp-for="Brand" class="form-control" asp-items="ViewBag.Brand"></select>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="form-check">
                <label class="form-check-label" asp-for="New">
                    Sản Phẩm Mới
                </label>
                <input class="form-check-input" type="checkbox" asp-for="New" />
            </div>
            <div class="form-check">
                <label class="form-check-label" asp-for="Hot">
                    Sản Phẩm Hot
                </label>
                <input class="form-check-input" type="checkbox" asp-for="Hot" />
            </div>
            <div class="form-check">
                <label class="form-check-label" asp-for="TopSelling">
                    Sản Phẩm Bán Chạy
                </label>
                <input class="form-check-input" type="checkbox" asp-for="TopSelling" />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control" type="text"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
       
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Back</a>
</div>
        


