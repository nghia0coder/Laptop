@model Laptop.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>THÊM  MỚI</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Products" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Tên sản phẩm</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Loại sản phẩm</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label">Thương Hiệu</label>
                <select asp-for="Brand" class="form-control" asp-items="ViewBag.Brands"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô Tả</label>
                <input asp-for="Description" class="form-control-file" />
            </div>
             
            <div class="form-check">
                <label class="form-check-label" asp-for="New">
                    Sản Phẩm Mới
                </label>
                <input class="form-check-input" type="checkbox" asp-for="New"/>
            </div>
            <div class="form-check">
                <label class="form-check-label" asp-for="Hot">
                    Sản Phẩm Hot
                </label>
                <input class="form-check-input" type="checkbox" asp-for="Hot" />
            </div>
            <div class="form-check">
                <label class="form-check-label" asp-for="TopSelling">
                    Sản Phẩm Bán Chạy
                </label>
                <input class="form-check-input" type="checkbox" asp-for="TopSelling" />
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Trở về</a>
</div>



