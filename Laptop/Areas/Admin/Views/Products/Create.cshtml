@model GiayDep.Models.SanPham

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h1>Tạo mới</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Products" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tensp" class="control-label">Tên sản phẩm</label>
                <input asp-for="Tensp" class="form-control" />
                <span asp-validation-for="Tensp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dongia" class="control-label">Đơn giá</label>
                <input asp-for="Dongia" class="form-control" />
                <span asp-validation-for="Dongia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soluong" class="control-label">Số lượng</label>
                <input asp-for="Soluong" class="form-control" />
                <span asp-validation-for="Soluong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Baohanh" class="control-label">Bảo hành</label>
                <input asp-for="Baohanh" class="form-control" />
                <span asp-validation-for="Baohanh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Khuyenmai" class="control-label">Khuyến mãi</label>
                <input asp-for="Khuyenmai" class="form-control" />
                <span asp-validation-for="Khuyenmai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maloaisp" class="control-label">Mã loại sản phẩm</label>
                <select asp-for="Maloaisp" class="form-control" asp-items="ViewBag.Maloaisp"></select>
            </div>
            <div class="form-group">
                <label asp-for="Manhacc" class="control-label">Mã nhà cung cấp</label>
                <select asp-for="Manhacc" class="form-control" asp-items="ViewBag.Manhacc"></select>
            </div>
            <!-- Thêm phần tải lên hình ảnh 1 -->
            <div class="form-group">
                <label for="customFile1">Chọn ảnh 1 để tải lên:</label>
                <input type="file" class="form-control-file" id="customFile1">
            </div>
            <!-- Thêm phần tải lên hình ảnh 2 -->
            <div class="form-group">
                <label for="customFile2">Chọn ảnh 2 để tải lên:</label>
                <input type="file" class="form-control-file" id="customFile2">
            </div>
            <!-- Thêm phần tải lên hình ảnh 3 -->
            <div class="form-group">
                <label for="customFile3">Chọn ảnh 3 để tải lên:</label>
                <input type="file" class="form-control-file" id="customFile3">
            </div>
            <!-- Thêm phần tải lên hình ảnh 4 -->
            <div class="form-group">
                <label for="customFile4">Chọn ảnh 4 để tải lên:</label>
                <input type="file" class="form-control-file" id="customFile4">
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
