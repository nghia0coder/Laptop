@model Laptop.Models.Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">ADD NEW PRODUCT</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create" asp-controller="Products" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label">Product name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Category"></select>
            </div>

            <div class="mb-3">
                <label asp-for="Brand" class="form-label">Brand</label>
                <select asp-for="Brand" class="form-select" asp-items="ViewBag.Brand"></select>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                
                <textarea asp-for="Description" class="form-control" type="text"></textarea>
               
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="New" />
                <label class="form-check-label" asp-for="New">
                    Sản Phẩm Mới
                </label>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="Hot" />
                <label class="form-check-label" asp-for="Hot">
                    Sản Phẩm Hot
                </label>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="TopSelling" />
                <label class="form-check-label" asp-for="TopSelling">
                    Sản Phẩm Bán Chạy
                </label>
            </div>

            <div class="d-grid gap-2">
                <input type="submit" value="Tạo" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>
