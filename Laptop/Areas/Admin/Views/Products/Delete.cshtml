@model Laptop.Models.SanPham

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h2 class="text-center"> Xóa </h2>
<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
           Tên sản phẩm:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tensp)
        </dd>
        <dt class="col-sm-2">
            Đơn giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dongia)
        </dd>
        <dt class="col-sm-2">
           Số lượng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soluong)
        </dd>
        <dt class="col-sm-2">
            Bảo hành
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Baohanh)
        </dd>
        <dt class="col-sm-2">
            Khuyến mãi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Khuyenmai)
        </dd>
        <dt class="col-sm-2">
            Hình ảnh:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hinhanh1)
        </dd>
        <dt class="col-sm-2">
           Mô tả:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Mã loại sản phẩm:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaloaispNavigation.Idloai)
        </dd>
        <dt class="col-sm-2">
            Mã nhà cung cấp:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManhaccNavigation.Idnhacc)
        </dd>
    </dl>
</div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Idsp" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
    </form>


<style>
    .container {
        margin-top: 20px;
    }
</style>
