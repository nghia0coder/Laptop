@model GiayDep.Models.LoaiSp

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h2 class="text-center"> Chỉnh sửa </h2>


<hr />
<div >
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Idloai" />
                <div class="form-group">
                    <label asp-for="Tenloai" class="control-label">Tên loại</label>
                    <input asp-for="Tenloai" class="form-control" />
                    <span asp-validation-for="Tenloai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Trở về</a>
</div>
