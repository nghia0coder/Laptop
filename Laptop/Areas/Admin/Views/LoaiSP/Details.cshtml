@model GiayDep.Models.LoaiSp

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h1>Chi tiết</h1>

<div class="container">

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên loại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tenloai)
        </dd>
    </dl>
</div>
<div class="container">
    <a asp-action="Edit" asp-route-id="@Model?.Idloai" class="btn btn-primary">Chỉnh sửa</a> |
    <a asp-action="Index" class="btn btn-secondary">Trở về</a>
</div>
