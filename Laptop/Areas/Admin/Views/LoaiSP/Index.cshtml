@model IEnumerable<GiayDep.Models.LoaiSp>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h1>Loại sản phẩm</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Tên loại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tenloai)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Idloai" class="btn btn-primary">Chỉnh sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.Idloai" class="btn btn-info">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.Idloai" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>