@model Laptop.Models.Ram

@{
    ViewData["Title"] = "Create";
}

<h2>ADD RAM</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RamName" class="control-label">Ram name</label>
                <input asp-for="RamName" class="form-control" />
                <span asp-validation-for="RamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br>
                <input type="submit" value="Add" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <br>
    <a class="btn btn-dark" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
