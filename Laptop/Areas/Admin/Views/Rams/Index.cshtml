@model IEnumerable<Laptop.Models.Ram>

@{
    ViewData["Title"] = "Index";
}

<h2>DANH SÁCH CÁC LOẠI RAM</h2>

<p>
    <a class="btn btn-info" asp-action="Create">Tạo mới</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Loại Ram
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RamName)
                </td>
                <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.RamId">Sửa</a> |
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.RamId">Chi tiết</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RamId">Xóa</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>