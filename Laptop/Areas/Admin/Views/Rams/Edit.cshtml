@model Laptop.Models.Ram

@{
    ViewData["Title"] = "Edit";
}

<h2>CHỈNH SỬA LOẠI RAM</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RamId" />
            <div class="form-group">
                <label asp-for="RamName" class="control-label">Loại Ram</label>
                <input asp-for="RamName" class="form-control" />
                <span asp-validation-for="RamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br>
                <input type="submit" value="Lưu" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <br>
    <a class="btn btn-dark" asp-action="Index">Trở về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
