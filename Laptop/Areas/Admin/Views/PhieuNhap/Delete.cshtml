@model GiayDep.Models.PhieuNhap

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center font-weight-bold">Xóa phiếu nhập</h1>

<h3>Bạn có muốn xóa phiếu nhập?</h3>
<div>
    <h4>Phiếu nhập</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ngày nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngaynhap)
        </dd>
        <dt class = "col-sm-2">
            Mã nhà cung cấp
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdnhaccNavigation.Idnhacc)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Idphieunhap" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Quay trở lại</a>
    </form>
</div>
