@model IEnumerable<Laptop.Models.Color>

@{
    ViewData["Title"] = "Index";
} 

<h2>PRODUCT COLOR</h2>

<p>
    <a class="btn btn-info" asp-action="Create">Add new</a>
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Color name
                </th>
             <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ColorName)
                </td>
                <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ColorId">Edit</a> |
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ColorId">Detail</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ColorId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>