@model IEnumerable<Laptop.Models.Voucher>

@{
    ViewData["Title"] = "Index";
}

<h2>MÃ KHUYẾN MÃI</h2>

<p>
    <a class="btn btn-info" asp-action="Create">Tạo mới</a>
</p>
<div id="list" class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Mã khuyến mãi
                </th>
                <th>
                    Khuyến mãi
                </th>
                <th>
                    Số lượng
                </th>
                <th>
                    Ngày bắt đầu
                </th>
                <th>
                    Ngày kết thúc
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VoucherCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VoucherQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.VoucherCode">Sửa</a> |
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.VoucherCode">Chi tiết</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.VoucherCode">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
