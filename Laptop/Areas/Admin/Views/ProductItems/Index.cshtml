@model IEnumerable<Laptop.Models.ProductItem>

@{
    ViewData["Title"] = "Index";
}

<h2>DANH SÁCH SẢN PHẨM</h2>


<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Mã sản phẩm
                </th>
                <th>
                    Màu
                </th>
                <th>
                    Tên mục sản phẩm
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color.ColorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductItemsId" class="btn btn-primary">Sửa</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductItemsId" class="btn btn-info">Chi tiết</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductItemsId" class="btn btn-danger">Xóa</a>
                        <a asp-action="Create" asp-controller="ProductVariations" asp-route-id="@item.ProductItemsId" class="btn btn-success">Thêm Cấu Hình</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
