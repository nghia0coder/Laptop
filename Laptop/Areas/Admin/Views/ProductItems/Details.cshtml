@model Laptop.Models.ProductItem

@{
    ViewData["Title"] = "Details";
    IEnumerable<ProductVariation> listSize = ViewBag.productSize as IEnumerable<ProductVariation>;
}

<h2>Details</h2>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Product Item</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Product Code:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductCode)</dd>

            <dt class="col-sm-3">Color:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Color.ColorName)</dd>

            <dt class="col-sm-3">Product:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.ProductName)</dd>

            <dt class="col-sm-2">
                <img src="~/Contents/img/@Model.Image1" class="thumbnail-image" />
            </dt>
            <dt class="col-sm-2">
                <img src="~/Contents/img/@Model.Image2" class="thumbnail-image" />
            </dt>
            <dt class="col-sm-2">
                <img src="~/Contents/img/@Model.Image3" class="thumbnail-image" />
            </dt>
            <dt class="col-sm-2">
                <img src="~/Contents/img/@Model.Image4" class="thumbnail-image" />
            </dt>
            <dt class="col-sm-2">
           
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ProductItemsId">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>


<style>
    .thumbnail-image {
        max-width: 100px; /* Adjust the maximum width as needed */
        max-height: 100px; /* Adjust the maximum height as needed */
    }
</style>
