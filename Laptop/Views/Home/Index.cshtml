}

<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- shop -->
			<div class="col-md-4 col-xs-6">
				<div class="shop">
					<div class="shop-img">
						<img src="~/img/@settings.ElementAt(0).ImgUrl" alt="">
					</div>
					<div class="shop-body">
						@Html.Raw(@settings.ElementAt(0).Contents)
						<a href="Product/apple-1" class="cta-btn">Shop now<i class="fa fa-arrow-circle-right"></i></a>
					</div>
				</div>
			</div>
			<!-- /shop -->
			<!-- shop -->
			<div class="col-md-4 col-xs-6">
				<div class="shop">
