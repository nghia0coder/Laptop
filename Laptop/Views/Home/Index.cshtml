

@{	ViewBag.Title = "Index";
	Layout = "~/Views/Layout/HomeLayout.cshtml";

	// Định nghĩa các viewbag để truyền vào partial Product
	IEnumerable<Product> lstLTM = ViewBag.ListLTM as IEnumerable<Product>; // Cách ép kiểu 1
	IEnumerable<Product> lstSelling = ViewBag.ListSelling as IEnumerable<Product>;
	IEnumerable<Product> lstDTM = ViewBag.ListDTM as IEnumerable<Product>;
