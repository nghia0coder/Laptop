@{
    ViewData["Title"] = "Home";
    
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewData["Title"]</title>
    <!--//theme-style-->

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="New Store Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design">
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- start menu -->
    <script src="~/js/thickbox.js"></script>
    <link rel="stylesheet" href="~/css/thickbox.css" type="text/css" media="screen" />


    <link href="~/popup/addtocart/demo.css" rel="stylesheet" />


    <link href="~/popup/addtocart/style.css" rel="stylesheet" />
    <!-- Google font -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/Product/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/Product/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/Product/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/Product/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/Product/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Product/css/style.css" />
    <!-- Slider-->
    <link href="~/slider/style.css" rel="stylesheet" />

</head>


<body>

    <!--header-->
    <div class="header">
        @await Html.PartialAsync("~/Views/Shared/Partial/_HeaderTopPartial.cshtml")

    </div>
@*     <div>
        @await Component.InvokeAsync("Header")
    </div> *@
  <div>
        @await Html.PartialAsync("~/Views/Shared/Partial/_TopBarPartial.cshtml")
    </div>
    <div>
       @await Component.InvokeAsync("Nav")
    </div>
    <!--header-->

    @RenderBody()
    <div>
        @await Html.PartialAsync("~/Views/Shared/Partial/_Plugin.cshtml")
    </div>
    
    <!-- #region Phần footer -->
    <div class="footer">
        @await Component.InvokeAsync("Footer")
    </div>



    @RenderSection("scripts", required: false)
    <!-- #endregion -->
    <!-- jQuery Plugins -->

    <script src="~/Product/js/jquery.min.js"></script>
 


    <script src="~/Product/js/bootstrap.min.js"></script>
    <script src="~/Product/js/slick.min.js"></script>
    <script src="~/Product/js/nouislider.min.js"></script>
    <script src="~/Product/js/jquery.zoom.min.js"></script>
    <script src="~/Product/js/main.js"></script>
    <script src="~/slider/app.js"></script>



</body>
</html>
