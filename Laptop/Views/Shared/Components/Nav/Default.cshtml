@model IEnumerable<Brand>

<!-- NAVIGATION -->
<nav id="navigation">
	<!-- container -->
	<div class="container">
		<!-- responsive-nav -->
		<div id="responsive-nav">
			<!-- NAV -->
			<ul class="main-nav nav navbar-nav">
				<li class="active"><a asp-area="" asp-action="Index" asp-controller="Home">Home</a></li>
				@foreach (var item in Model)
				{
					<li><a href="/Product/@SlugGenerator.SlugGenerator.GenerateSlug(item.BrandName)-@item.BrandId">@item.BrandName.ToUpper()</a></li>
				}
				<li><a asp-controller="Tintucview" asp-action="Index">Tin tức</a></li>
				<li><a asp-controller="Warranty" asp-action="Index">Bảo hành</a></li>
			</ul>
			<!-- /NAV -->
		</div>
		<!-- /responsive-nav -->
	</div>
	<!-- /container -->
</nav>
<!-- /NAVIGATION -->