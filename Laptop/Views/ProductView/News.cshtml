@using Microsoft.AspNetCore.Http.Extensions
@model IEnumerable<Tintuc>

<style>
	.col-md-4 .grid-top .nameSP a:hover {
		color: rgba(239, 95, 33);
	}
</style>
@{
	string currentUrl = Context.Request.GetDisplayUrl();
}
<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">

			<!-- section title -->
			<div class="col-md-12">
				<div class="section-title">
					<h3 class="title">Technology News</h3>
				</div>
			</div>
			<!-- /section title -->
			<!-- Products tab & slick -->
			<div class="col-md-12">
				<div class="row">
					<div class="products-tabs">
						<!-- tab -->
						<div id="tab1" class="tab-pane active">
							<div class="products-slick" data-nav="#slick-nav-4">
								<!-- product -->
								@foreach (var item in Model)
								{
									<div class="product" alt="">
										<a asp-action="DisplayPost" asp-controller="Tintucview" asp-route-postid="@item.PostID" data-wpel-link="exclude" />
										<div class="product-img">
											<img class="scaled-image" src="~/Contents/img/@item.Thumburl" alt=""> 

											<div class="product-label">
												<span class="new">NEW</span>
											</div>
										</div>
										<div class="product-body">
											<p class="product-category">@item.Brand.BrandName</p>
											<h3 class="product-name"><a href="#">@item.Title </a></h3>

										
								
										</div>
									</div>
								}
								<!-- /product -->
							</div>
							<div id="slick-nav-4" class="products-slick-nav"></div>
						</div>
						<!-- /tab -->
					</div>
				</div>
			</div>
			<!-- Products tab & slick -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /SECTION -->

<style>
	/* Định dạng cho ô vuông */
	.product {
		border-radius: 10px; /* Làm tròn các góc */
		overflow: hidden; /* Đảm bảo hình ảnh và nội dung không bị tràn ra ngoài ô */
	}

	/* Định dạng cho hình ảnh bên trong ô */
	.product-img {
		width: 100%; /* Đảm bảo hình ảnh chiếm toàn bộ chiều rộng của ô */
		position: relative;
		position: absolute; /* Cần thiết để xác định vị trí tuyệt đối cho hình ảnh */
	}
</style>

