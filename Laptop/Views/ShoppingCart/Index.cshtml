@using GiayDep.ViewModels
@model Item
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var httpContext = HttpContextAccessor.HttpContext;
}
@{
    ViewData["Title"] = "XemGioHang";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

@Html.Partial("_NotificationPartial")
@if (Model == null) // Check if the list is null or empty
{
    <h1 style="color:crimson">Giỏ hàng rỗng</h1>
}
else
{
    <section class="h-100 h-custom" style="background-color: #fff;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12">
                    <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                        <div class="card-body p-0">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="p-5">
                                        <div class="d-flex justify-content-between align-items-center mb-5" style="margin-top: 40px;">
                                            <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                                        
                                        </div>

                                        @foreach (var item in Model.CartItems)
                                        {
                                            <hr class="my-4 thick-hr">
                                            <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                <div class="col-md-2 col-lg-2 col-xl-2">
                                                    <img src="~/Contents/img/@item.HinhAnh"
                                                         class="img-fluid rounded-3" style="width: 100px; height: auto;">
                                                </div>
                                                <div class="col-md-3 col-lg-3 col-xl-3">
                                                    <h6 class="text-muted">Shirt</h6>
                                                    <h6 class="text-black mb-0">Cotton T-shirt</h6>
                                                </div>
                                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                    <a class="btn btn-primary btn-sm" asp-controller="ShoppingCart" asp-action="Decrease" asp-route-id="@item.MaSP"> - </a>
                                                    <input class="cart_quanity_input text-center" type="text" name="Quantity" value="@item.SoLuong" autocomplete="off" size="2">
                                                    <a class="btn btn-success btn-sm" asp-controller="ShoppingCart" asp-action="Increase" asp-route-id="@item.MaSP"> + </a>
                                                </div>
                                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                    <h6 class="mb-0">€ @item.DonGia</h6>
                                                </div>
                                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                    <a class="btn btn-danger btn-sm" asp-controller="ShoppingCart" asp-action="Removed" asp-route-id="@item.MaSP"> Remove </a>
                                                </div>
                                            </div>
                                            <hr class="my-4 thick-hr">
                                        }
                                        <div class="pt-5 justify-content-between align-items-center">
                                            <div class="pt-5">
                                                <h6 class="mb-0 d-flex ">
                                                    <a href="#!" class="text-body">
                                                        <a class="btn btn-primary btn-sm ml-auto" asp-controller="Home" asp-action="Index"> Back To Sop </a>
                                                    </a>
                                                    <a class="btn btn-danger btn-sm ml-auto" style="margin-left: 618px" asp-controller="ShoppingCart" asp-action="Clear"> Clear </a>
                                                </h6>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- Order Details -->
                                <div class="col-lg-4 order-details mt-lg-5">
                                    <div class="section-title text-center">
                                        <h3 class="title">Your Order</h3>
                                    </div>
                                    <div class="order-summary">

                                        <div class="order-col">
                                            <div><strong>PRODUCT</strong></div>
                                            <div><strong>TOTAL</strong></div>
                                        </div>
                                        <div class="order-products">
                                            @foreach (var item in Model.CartItems)
                                            {
                                                <div class="order-col">
                                                    @item.SoLuong<span style="margin-right: 0.2em;">x</span>@item.TenSP
                                                    <div>$@(item.DonGia * item.SoLuong)</div>
                                                </div>
                                            }
                                        </div>
                                        <div class="order-col">
                                            <div>Shiping</div>
                                            <div><strong>FREE</strong></div>
                                        </div>
                                        <div class="order-col">
                                            <div><strong>TOTAL</strong></div>
                                            <div><strong class="order-total">$@Model.Total</strong></div>
                                        </div>
                                    </div>
                                    <div class="payment-method">
                                        <div class="input-radio">
                                            <input type="radio" name="payment" id="payment-1">
                                            <label for="payment-1">
                                                <span></span>
                                                Direct Bank Transfer
                                            </label>
                                            <div class="caption">
                                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                            </div>
                                        </div>
                                        <div class="input-radio">
                                            <input type="radio" name="payment" id="payment-2">
                                            <label for="payment-2">
                                                <span></span>
                                                Cheque Payment
                                            </label>
                                            <div class="caption">
                                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                            </div>
                                        </div>
                                        <div class="input-radio">
                                            <input type="radio" name="payment" id="payment-3">
                                            <label for="payment-3">
                                                <span></span>
                                                Paypal System
                                            </label>
                                            <div class="caption">
                                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-checkbox">
                                        <input type="checkbox" id="terms">
                                        <label for="terms">
                                            <span></span>
                                            I've read and accept the <a href="#">terms & conditions</a>
                                        </label>
                                    </div>
                                    @if (User.Identity?.IsAuthenticated ?? false)
                                    {
                                        <a asp-action="DatHang" asp-controller="ShoppingCart" class="primary-btn order-submit">Place order</a>
                                    }
                                    else
                                    {
                                        <a asp-action="Index" asp-controller="Account" class="primary-btn order-submit">Login For Place Order</a>
                                    }
                                </div>
                                <!-- /Order Details -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}



